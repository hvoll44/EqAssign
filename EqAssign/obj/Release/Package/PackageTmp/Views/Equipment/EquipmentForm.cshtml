
@model EqAssign.ViewModels.EquipmentFormViewModel

@{
    ViewBag.Title = "EquipmentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.PageTitle</h2>

@using (Html.BeginForm("Save", "Equipment"))
{
    @Html.ValidationSummary(true, "Please fix the following errors:")
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.Name)
        @Html.TextBoxFor(m => m.Equipment.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Equipment.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.ModelTypeId)
        @Html.DropDownListFor(m => m.Equipment.ModelTypeId, new SelectList(Model.Models, "Id", "Name"), "Select Model", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Equipment.ModelType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.ManufactureDate)
        @Html.TextBoxFor(m => m.Equipment.ManufactureDate, "{0:yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Equipment.ManufactureDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.PurchaseDate)
        @Html.TextBoxFor(m => m.Equipment.PurchaseDate, "{0:yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Equipment.PurchaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Equipment.Stock)
        @Html.TextBoxFor(m => m.Equipment.Stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Equipment.Stock)
    </div>
    @Html.HiddenFor(m => m.Equipment.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
